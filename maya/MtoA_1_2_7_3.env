{
   "tool": "MtoA",
   "version": "1.2.7.3",
   "requires": ["maya", "MtoAShaders1.2.7.3"],
   "platforms": ["darwin"],
   "environment":
   {
      "MTOA_ROOT": {"strict": True,
                    "common": "@path/@tool/@version"},
      "PATH": "${MTOA_ROOT}/${MAYA_VERSION}/bin",
      "PYTHONPATH": "${MTOA_ROOT}/${MAYA_VERSION}/scripts",
      "MAYA_PLUG_IN_PATH": "${MTOA_ROOT}/${MAYA_VERSION}/plug-ins",
      "MAYA_RENDER_DESC_PATH": "${MTOA_ROOT}/${MAYA_VERSION}/",
      "XBMLANGPATH": {"common": "${MTOA_ROOT}/${MAYA_VERSION}/icons%B",
                      "windows": "${MTOA_ROOT}/${MAYA_VERSION}/icons"},
      "MTOA_EXTENSIONS_PATH": {"strict": True,
                               "common": "${MTOA_ROOT}/${MAYA_VERSION}/extensions"}
   },
   "optional":
   {
      "devel":
      {
         "MTOA_INCLUDE": {"strict": True,
                          "common": "${MTOA_ROOT}/${MAYA_VERSION}/include"},
         "MTOA_LIB": {"strict": True,
                      "windows": "${MTOA_ROOT}/${MAYA_VERSION}/lib",
                      "common": "${MTOA_ROOT}/${MAYA_VERSION}/bin"}
      }
   }
}