{
   "tool": "HtoA",
   "version": "1.10.1",
   "requires": ["houdini", "arnold4.2.12.2+"],
   "platforms": ["darwin"],
   "environment":
   {
      "HTOA_ROOT": {"strict": True,
                    "common": "@path/@tool/@version"},
      "HOUDINI_PATH": {"prepend": True,
                       "common": "${HTOA_ROOT}/${HOUDINI_VERSION}"},
      "PATH": {"windows": "${HTOA_ROOT}/${HOUDINI_VERSION}/scripts/bin"},
      "ARNOLD_PLUGIN_PATH": "${HTOA_ROOT}/${HOUDINI_VERSION}/arnold/plugins",
      "ARNOLD_PROCEDURAL_PATH": "${HTOA_ROOT}/${HOUDINI_VERSION}/arnold/procedurals"
   }
}