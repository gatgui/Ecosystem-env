{
   "tool": "gaffer",
   "version": "0.29.0.0",
   "requires": ["arnold4.2.12.0+"],
   "platforms": ["darwin", "linux"],
   "environment":
   {
      "GAFFER_ROOT": {"strict": True,
                      "common": "@path/@tool/@version"},
      "PATH": "${GAFFER_ROOT}/bin"
   },
   "optional":
   {
      "devel":
      {
         "GAFFER_INCLUDE": {"strict": True,
                            "common": "${GAFFER_ROOT}/include"},
         "GAFFER_LIB": {"strict": True,
                        "common": "${GAFFER_ROOT}/lib"}
      }
   }
}